<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFBFA"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:src="@drawable/ic_menu">

        </ImageView>

        <TextView
            android:id="@+id/textView"
            android:gravity="center|start"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="HOME" />

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/img_568656"/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="50dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="HI!\nLet's Take A Ride!"
            android:textSize="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"/>
        <TextView
            android:layout_marginBottom="20dp"
            android:paddingTop="15dp"
            android:paddingBottom="20dp"
            android:paddingEnd="20dp"
            android:paddingStart="25dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:drawableStart="@drawable/ic_round_home"
            android:gravity="center|start"
            android:drawablePadding="20dp"
            android:textColor="@color/white"
            android:background="@drawable/bg_home_button_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rent A Ride"/>

        <TextView
            android:layout_marginBottom="20dp"
            android:paddingTop="15dp"
            android:paddingBottom="20dp"
            android:paddingEnd="20dp"
            android:paddingStart="25dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:drawableStart="@drawable/ic_share"
            android:gravity="center|start"
            android:drawablePadding="20dp"
            android:textColor="@color/white"
            android:background="@drawable/bg_home_button_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Share A Ride"/>

        <TextView
            android:layout_marginBottom="20dp"
            android:paddingTop="15dp"
            android:paddingBottom="20dp"
            android:paddingEnd="20dp"
            android:paddingStart="25dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:drawableStart="@drawable/ic_rider"
            android:gravity="center|start"
            android:drawablePadding="20dp"
            android:textColor="@color/white"
            android:background="@drawable/bg_home_button_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rent A Rider"/>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Suggestions"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>






</LinearLayout>